<h1>Editing Book</h1>



<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors
    <%= @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  
  <label>Title</label>
  </br>
  <%= f.text_field :title %>
  </br>
  <label>Body</label>
  </br>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Update Book' %>
  </br>
<% end %>
<%= link_to "Show", "/books/#{@book.id}" %>
 |
<%= link_to "Back", "/books" %>